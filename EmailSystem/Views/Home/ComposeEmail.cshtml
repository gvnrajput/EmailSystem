@model EmailSystem.Models.VM_EmailDetails

<div class="container">
    <h2>Compose Email</h2>
    <form asp-action="SendEmail" asp-controller="SendEmail" method="post">
        <div class="form-group">
            <label for="From">From:</label>
            <input asp-for="From" class="form-control" required>
            <span asp-validation-for="From" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="To">To:</label>
            <input asp-for="To" class="form-control" required>
            <span asp-validation-for="To" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Cc">CC:</label>
            <input asp-for="Cc" class="form-control">
            <span asp-validation-for="Cc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Subject">Subject:</label>
            <input asp-for="Subject" class="form-control">
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Body">Body:</label>
            <textarea asp-for="Body" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="IsAttachment">Attachment:</label>
            <input asp-for="IsAttachment" type="checkbox" class="form-check-input">
            <span asp-validation-for="IsAttachment" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Send Email</button>
    </form>
</div>
