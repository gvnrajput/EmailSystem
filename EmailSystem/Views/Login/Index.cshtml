@model EmailSystem.Models.Users
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>
        MailMaster Login
    </title>
    <script src="https://cdn.tailwindcss.com">
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="w-full max-w-sm mx-auto">
        <div class="bg-white shadow-md rounded-lg p-8">
            <div class="flex items-center justify-center mb-6">
                <img alt="MailMaster logo" class="mr-2" src="https://placehold.co/40x40" />
                <span class="text-2xl font-semibold">
                    Email System
                </span>
            </div>
            <form asp-action="Login" asp-controller="Login" method="post">
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="UserName">
                        Email Address
                    </label>
                    <input asp-for="UserName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter your email" />
                    <span asp-validation-for="UserName" class="text-red-500 text-sm">
                    </span>
                </div>
                <div class="mb-6">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                        Password
                    </label>
                    <input asp-for="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter your password" type="password" />
                    <span asp-validation-for="password" class="text-red-500 text-sm">
                    </span>
                </div>
                <div class="flex items-center justify-between mb-4">
                    <a class="inline-block align-baseline font-bold text-sm text-orange-500 hover:text-orange-800" href="#">
                        Forgot Password?
                    </a>
                    <a asp-action="create" asp-controller="user" class="inline-block align-baseline font-bold text-sm text-orange-500 hover:text-orange-800" >
                        Create New
                    </a>
                </div>
                <div class="flex items-center justify-center">
                    <button class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>
    <footer class="w-full text-center py-4 mt-8">
        <div class="text-gray-500 text-sm">
            <a class="mx-2 hover:text-gray-800" href="#">
                Privacy Policy
            </a>
            <a class="mx-2 hover:text-gray-800" href="#">
                Terms of Service
            </a>
            <a class="mx-2 hover:text-gray-800" href="#">
                Contact Us
            </a>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js">
    </script>
</body>
</html>

